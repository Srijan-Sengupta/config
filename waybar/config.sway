                "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
                "format-bluetooth-muted": "Ô™Ä {icon}Ôäî {format_source}",
                "format-muted": "Ô™Ä {format_source}",
                "format-source": "{volume}% ÔÑ∞",
                "format-source-muted": "Ô™Ä",
                "format-icons": {
                        "headphone": "Ôüä",
                        "hands-free": "Ôüä",
                        "headset": "Ôüä",
                        "phone": "ÔÇï",
                        "portable": "ÔÇï",
                        "car": "ÔÜπ",
                        "default": [
                                "ÔÄ¶",
                                "ÔÄß",
                                "Ô©Ω",
                                "ÔÄ®"
                        ]
                },
                "on-click": "footclient -T 'Audio Control' -e alsamixer -V all"
        },
        "backlight": {
                "device": "intel_backlight",
                "format": "{percent}% {icon}",
                "format-icons": [
                        "Óéç",
                        "Óèì",
                        "Óèë",
                        "Óèè",
                        "Óèé",
                        "Óèç",
                        "Óèä",
                        "Óèà",
                        "Óéõ"
                ],
                "on-click": ""
        },
        "wlr/taskbar": {
                "format": "{icon}",
                "icon-size": 25,
                "tooltip-format": "{title}",
                "on-click": "minimize-raise",
                "on-click-middle": "close"
        },
        "idle_inhibitor": {
                "format": "{icon}",
                "format-icons": {
                        "activated": "Ôúá",
                        "deactivated": "‚èæ"
                },
                "on-click": ""
        },
        "clock": {
                "on-click": "",
                "interval": 1,
                "format": "{:%I:%M:%S %p}",
                "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
                "format-alt": "{:%d-%m-%Y}"
        },
        "battery": {
                "on-click": "",
                "states": {
                        "good": 95,
                        "warning": 60,
                        "critical": 15
                },
                "format": "{capacity}% {icon}",
                "format-charging": "{capacity}% Óåï", //Ôóß",
                "format-plugged": "{capacity}% Ôá¶",
                "format-alt": "{time} {icon}",
                // "format-good": "", // An empty format will hide the module
                // "format-full": ""
                "format-icons": [
                        "ÔâÑ",
                        "ÔâÉ",
                        "ÔâÇ",
                        "ÔâÅ",
                        "ÔâÄ"
                ]
        },
        "custom/launcher": {
                "on-click": "sh ~/.config/waybar/scripts/launcher.sh",
                "format": "<big>Óùπ/ÔÖº</big>",
                "tooltip": false
                //"tooltip-format": "Start here"
        },
        "custom/notification": {
                "exec": "~/.config/waybar/scripts/dunst.sh",
                "on-click-right": "dunstctl set-paused toggle",
                "on-click": "dunstctl history-pop",
                "on-click-middle": "dunstctl close-all",
                "restart-interval": 2,
                "return-type": "json"
        },
        "custom/updates": {
                "exec": "~/.config/waybar/scripts/updates.sh",
                "on-click": "footclient -T Updates -e sudo pacman -Syu",
                "on-click-right": "",
                "restart-interval": 3600,
                "return-type": "json",
                "exec-on-event": true
        },
        "tray": {
                "icon-size": 21,
                "spacing": 10
        },
        "sway/mode": {
                "format": "Ôóº {}",
                "max-length": 50
        },
        "sway/workspaces": {
                "all-outputs": true,
                "format": "{name}"
        },
        "sway/window": {
                "format": "{title}",
                "max-length": 20,
                "rewrite": {
                        "(.*) - LibreWolf": "üåé $1",
                        "(.*) - vim": "ÓüÖ $1",
                        "(.*) - zsh": "ÔÑ† [$1]"
